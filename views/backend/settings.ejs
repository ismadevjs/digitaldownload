<%- include('partials/header') %>
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">

                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">

                                        <h4 class="mt-0 header-title">Site Settings</h4>
                            
                                        <form action="/admin/settings" method="post" enctype="multipart/form-data">
                                          <div class="form-group row">
                                              <label for="example-text-input" class="col-sm-2 col-form-label">Name</label>
                                              <div class="col-sm-10">
                                                  <input class="form-control" type="text" name="sitename" value="<%=settings.sitename%>" id="example-text-input">
                                              </div>
                                          </div>
                                          <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-2 col-form-label">Heading</label>
                                            <div class="col-sm-10">
                                                <input class="form-control" type="text" name="heading" value="<%=settings.heading%>" id="example-text-input">
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-2 col-form-label">Sub-heading</label>
                                            <div class="col-sm-10">
                                                <input class="form-control" type="text" name="subHeading" value="<%=settings.subHeading%>" id="example-text-input">
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="imageAvatar" class="col-sm-2 col-form-label">Image</label>
                                            <div class="col-sm-10">
                                                <div class="">
                                                   <% if(settings.logos.filename) { %>
                                                    <img class="rounded mr-2 mo-mb-2" alt="200x200" width="200" src="/<%=settings.logos.filename%>" data-holder-rendered="true">                                                </div>                                            </div>

                                                    <%} else { %>
                                                        <img class="rounded mr-2 mo-mb-2" alt="200x200" width="200" src="/assets/images/logo-dark.png" data-holder-rendered="true">                                                </div>                                            </div>
                                              
                                                        <% } %>
                                        </div>

                                        

                                          <div class="form-group row">
                                              <label for="about" class="col-sm-2 col-form-label">About</label>
                                              <div class="col-sm-10">
                                                <textarea id="about" class="form-control" name="settingsAbout" maxlength="225" rows="3" placeholder="Short description about your website"><%=settings.settingsAbout%></textarea>                                            </div>
                                          </div>
                                     <div class="form-group row">
                                            <label for="fileup" class="col-sm-2 col-form-label">Upload Logo</label>
                                            <div class="col-sm-10">
                                                <div class="form-group"> 
                                                    <input id="fileup" type="file" name="logos" class="filestyle form-control" data-buttonname="btn-secondary" multiple>
                                                </div>
                                             </div>
                                    </div>

                                 

                                    <div class="form-group row">
                                        <label for="about" class="col-sm-2 col-form-label">Footer</label>
                                        <div class="col-sm-10">
                                          <textarea id="about" class="form-control" name="footer" maxlength="225" rows="3" placeholder="Footer Details"><%=settings.footer%></textarea>                                            </div>
                                    </div>

                                          <div class="form-group row">
                                              <div class="col-sm-10 text-center">
                                                <button type="submit" class="btn btn-success">update</button>
                                              </div>
                                          </div>
                                                                      
                                        </form>



                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->

</div>
 </div>
</div>
 </div>


<%- include('partials/footer') %>
