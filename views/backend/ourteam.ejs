<%- include('partials/header')%>
<!-- ============================================================== -->
<!-- Start right Content here -->
<!-- ============================================================== -->
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">

                    <div class="col-sm-6">
                        <h4 class="page-title">Our Team</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Sitename</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Our Team</a></li>
                        </ol>

                    </div>
                    <div class="col-sm-6">

                        <div class="float-right d-none d-md-block">
                            <div class="dropdown">

                              <button type="button" class="btn btn-success waves-effect waves-light" data-toggle="modal" data-target=".addMember"><i class="mdi mdi-store mr-2"></i>Add Member</button>

                                <div class="modal fade addMember" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title mt-0"><i class="mdi mdi-store mr-2"></i>Add Member</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                            </div>
                                            <div class="modal-body">
                                                <form  action="/admin/ourteam" method="post" enctype="multipart/form-data">
                                                  <div class="form-group">
                                                  <input class="form-control" type="text" name="memberName" placeholder="add a member name" required>
                                                  </div>
                                                  <div class="form-group">
                                                      <input class="form-control" type="text" name="memberWork" placeholder="add a member work" required>
                                                  </div>
                                                  <div class="form-group">
                                                    Background :   <input name="memberAvatar" type="file"> <p class="badge badge-pill badge-danger">NOTE : this is avatar</p>
                                                 </div>
                                                  <button class="btn btn-success" type="submit">Add</button>
                                                </form>
                                            </div>
                                        </div><!-- /.modal-content -->
                                    </div><!-- /.modal-dialog -->
                                </div><!-- /.modal -->





                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Our Team Management</h4>
                            <p class="text-muted m-b-30">Add, Edit, Delete Members</p>

                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Work</th>
                                    <th>Avatar</th>
                                    <th>Update / Delete</th>

                                </tr>
                                </thead>


                                <tbody>

                                    <% members.forEach(function(member) { %>

                                    
                                        <tr>
                                            <td>
                                                <%= member.memberName %>
                                            </td>
                                            <td>
                                                <%=member.memberWork%>
                                            </td>
                                            <td>
                                                <img class="rounded-circle" height="64" src="/<%=member.memberAvatar.filename%>" alt="">
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-warning waves-effect waves-light" data-toggle="modal" data-target=".Member">Edit</button>

                                                  <div class="modal fade Member " tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                                      <div class="modal-dialog modal-dialog-centered">
                                                          <div class="modal-content">
                                                              <div class="modal-header">
                                                                  <h5 class="modal-title mt-0">Edit Member</h5>
                                                                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                              </div>
                                                              <div class="modal-body">
                                                                  <form  action="/admin/ourteam/<%= member._id %>/edit" method="post">
                                                                    <div class="form-group">
                                                                        <input class="form-control" type="text" name="memberName" value="<%=member.memberName%>" required>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <input class="form-control" type="text" name="memberWork" value="<%=member.memberWork%>" required>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <img class="rounded-circle" height="64" src="/<%=member.memberAvatar.filename%>" alt="">

                                                                        </div>
                                                                    
                                                                    <button class="btn btn-success" type="submit" name="button">Edit</button>
                                                                  </form>
                                                              </div>
                                                          </div><!-- /.modal-content -->
                                                      </div><!-- /.modal-dialog -->
                                                  </div><!-- /.modal -->
                                                  <button type="button" class="btn btn-danger waves-effect waves-light" data-toggle="modal" data-target=".MemberTwo">Delete</button>

                                                    <div class="modal fade MemberTwo " tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title mt-0">Delete Category</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <form  action="/admin/ourteam/<%= member._id %>/delete" method="post">
                                                                      <div class="form-group">
                                                                        <span> You sure ?</span>
                                                                      </div>
                                                                      <button class="btn btn-danger" type="submit" name="deleteMember">Delete</button>
                                                                    </form>
                                                                </div>
                                                            </div><!-- /.modal-content -->
                                                        </div><!-- /.modal-dialog -->
                                                    </div><!-- /.modal -->

                                              </td>
                                        </tr>
                                      

                                        <% }) %>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->


        </div>
        <!-- container-fluid -->

    </div>
    <!-- content -->

     <footer class="footer">
        <%=settings.footer%>
    </footer>

</div>

<!-- ============================================================== -->
<!-- End Right content here -->
<!-- ============================================================== -->

</div>
<!-- END wrapper -->

<%- include('partials/footer')%>
