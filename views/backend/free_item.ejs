<%- include('partials/header') %>
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">

                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">

                                        <h4 class="mt-0 header-title">Free Item</h4>
                                        
                                        <form action="/admin/free_item" method="post" enctype="multipart/form-data">
                                          <div class="form-group row">
                                              <label for="example-text-input" class="col-sm-2 col-form-label">Heading</label>
                                              <div class="col-sm-10">
                                                  <input class="form-control" type="text" name="heading" value="<%=free.heading%>" id="example-text-input">
                                              </div>
                                          </div>
                                          <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-2 col-form-label">Sub-Heading</label>
                                            <div class="col-sm-10">
                                                <input class="form-control" type="text" name="subHeading" value="<%=free.subHeading%>" id="example-text-input">
                                            </div>
                                        </div>

                                       

                                        <div class="form-group row">
                                            <label for="imageAvatar" class="col-sm-2 col-form-label">Image</label>
                                            <div class="col-sm-10">
                                                <div class="">
                                                    <%if(free.ZipAndImage.cover[0]) { %>
                                                        <img class="rounded mr-2 mo-mb-2" alt="200x200" width="200" src="/<%=free.ZipAndImage.cover[0].filename%>" data-holder-rendered="true">                                               
    
                                                    <% } else { %>
                                                        <img class="rounded mr-2 mo-mb-2" alt="200x200" width="200" src="/assets/images/product.png" data-holder-rendered="true">                                               
    
                                                   <% }%>                 
                                                   </div>             
                                                   </div>

                                        </div>

                                        

            
                                              <div class="form-group row">
                                                <label for="fileup" class="col-sm-2 col-form-label">Upload Zip File</label>
                                                <div class="col-sm-10">
                                                    <div class="form-group"> 
                                                          <input id="fileup" type="file" name="zip" class="filestyle form-control" data-buttonname="btn-secondary"><p class="badge badge-pill badge-danger">NOTE : select The zipped file zip/rar</p>
                                                        </div>
                                                 </div>
                                              </div>


                                              <div class="form-group row">
                                                <label for="fileup" class="col-sm-2 col-form-label">Upload Cover image</label>
                                                <div class="col-sm-10">
                                                    <div class="form-group"> 
                                                          <input id="fileup" type="file" name="cover" class="filestyle form-control" data-buttonname="btn-secondary"><p class="badge badge-pill badge-danger">NOTE : select The zipped file first</p>
                                                        </div>
                                                 </div>
                                              </div>

                                          <div class="form-group row">
                                              <div class="col-sm-10 text-center">
                                                <button type="submit" class="btn btn-success">update</button>
                                              </div>
                                          </div>
                                                                      
                                        </form>



                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->

</div>
 </div>
</div>
 </div>


<%- include('partials/footer') %>
