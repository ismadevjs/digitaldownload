<%- include('partials/header') %>
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">

                                <h4 class="mt-0 header-title">Payment Method</h4>
                                <p class="text-muted m-b-30">Add Your Tokens Here</p>

                               <form action="/admin/whatWeDo" method="POST" enctype="multipart/form-data">
                                

                                <div class="form-group row">
                                    <label for="weDoOne" class="col-sm-2 col-form-label">What we do 1 Title : </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="weDoOne" value="<%=whatWeDo.weDoOne%>" id="weDoOne" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="weDoOneDescription" class="col-sm-2 col-form-label">What we do 1 Description : </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="weDoOneDescription" value="<%=whatWeDo.weDoOneDescription%>" id="weDoOneDescription" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="weDoTwoDescription" class="col-sm-2 col-form-label"> </label>
                                    <%if(whatWeDo.weDoAllImages.background[0] != null) { %>
                                        <img class="rounded col-sm-2 col-form-label" height="64" src="/<%=whatWeDo.weDoAllImages.background[0].filename%>" alt="">
                                    <% }else { %>

                                        <% } %>

                                </div>
                                <div class="form-group row">
                                    <label for="fileup" class="col-sm-2 col-form-label">Upload Background</label>
                                    <div class="col-sm-10">
                                        <div class="form-group"> 
                                            <input id="fileup" type="file" name="background" class="filestyle form-control" data-buttonname="btn-secondary" >
                                         </div>
                                     </div>
                                </div>

                                <div class="form-group row">
                                    <label for="weDoTwo" class="col-sm-2 col-form-label">What we do 2 Title : </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="weDoTwo" value="<%=whatWeDo.weDoTwo%>" id="weDoTwo" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="weDoTwoDescription" class="col-sm-2 col-form-label">What we do 2 Description : </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="weDoTwoDescription" value="<%=whatWeDo.weDoTwoDescription%>" id="weDoTwoDescription" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="weDoTwoDescription" class="col-sm-2 col-form-label"> </label>
    
                                    <%if(whatWeDo.weDoAllImages.logo[0] != null) { %>
                                        <img class="rounded col-sm-2 col-form-label" height="64" src="/<%=whatWeDo.weDoAllImages.logo[0].filename%>" alt="">
                                    <% }else { %>

                                        <% } %>
                                    </div>
                                    
                                <div class="form-group row">
                                    <label for="fileup" class="col-sm-2 col-form-label">Upload Logo</label>
                                    <div class="col-sm-10">
                                        <div class="form-group"> 
                                            <input id="fileup" type="file" name="logo" class="filestyle form-control" data-buttonname="btn-secondary" >
                                         </div>
                                     </div>
                                </div>


                               
                                <button class="btn btn-center btn-success" type="submit">Update</button>
                              
                            </form>
                                
                              
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
        </div>
    </div>
</div>    
<%- include('partials/footer') %>